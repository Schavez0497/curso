<p id="notice"><%= notice %></p>
<div class="card">
  <div class="card-header">
    Lista de libros
  </div>
  <div class="card-body">
    <table class="table">
  <thead>
    <tr>
      <th>Título</th>
      <th>Categoria</th>
      <th>Año</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr class="<%= cycle('table-primary', '') %>">
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.year%></td>
        <td><%= link_to 'Mostrar', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Borrar', book, method: :delete, data: { confirm: 'Seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  <div class="card-footer">
    <button type="button" class="btn btn-primary" ><%= link_to 'Nuevo libro', new_book_path %></button>
  </div>
</div>